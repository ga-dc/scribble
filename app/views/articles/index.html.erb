<div class='new_post'>
  <a><%=link_to 'New article', new_article_path %></a>
</div>

<% @articles.each do |article| %>
<div class='blog_post'>
  <img class='post_photo'><%= image_tag article.photo_url %></img>
  <h3><%= article.title %></h3>
  <p><%= article.text %></p>
  <div class='links'>
    <a><%= link_to 'Read More', article_path(article) %></a>
    <a><%= link_to 'Edit', edit_article_path(article) %></a>
    <a><%= link_to 'Destroy', article_path(article),
    method: :delete,
    data: { confirm: 'Are you sure?' } %></a>
  </div>
</div>
<% end %>
