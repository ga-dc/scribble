<h1> Edit Comment </h1>

<%= form_for [@post, @comment] do |f| %>

  <%= f.label :comment_by %>
  <%= f.text_field :comment_by %>

<br>
<br>
  <%= f.label :content %>
  <%= f.text_area :content, :cols => "50", :rows => "15" %>
<br>
<br>
<%= f.submit "Update"%>
<% end %>
<br>
<br>
<%= form_for [@post, @comment], url: "/posts/#{@post.id}/comments/#{@comment.id}", method: :delete do |f| %>
<%= f.submit "Delete", class: "btn-delete"%>

<% end %>
