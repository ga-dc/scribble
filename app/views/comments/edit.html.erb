<%= link_to "< Back", @post %>
<p>
    <div class="well">
        <h3>Edit Comment</h3>
        <%= form_for [@post, @comment] do |f| %>
        <p>
            <%= f.label :author %><br>
            <%= f.text_field :author, {:class=> 'form-control'} %>
        </p>
        <p>
            <%= f.label :content %><br>
            <%= f.text_area :content, {:class=> 'form-control'} %>
        </p>
        <p>
            <%= f.submit ({:class =>'btn btn-primary'})%>
        </p>
    </div>
    <% end %>
