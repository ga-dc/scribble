<h1>Edit Comment</h1>

<%= form_for [@post, @comment], data: { confirm: "Are you done?"} do |f| %>

  <div>
  <%= f.label "Comment"  %>
  <%= f.text_area :text, size: "50x10"  %>
  </div>


  <%= f.submit "Save", class: "submitButton" %>



<% end  %>

<%= form_for [@post, @comment], data: { confirm: "Do you really want to delete this post?"}, method: :delete do |f| %>
    <%= f.submit "Delete", class: "deleteButton" %>
  <% end  %>
