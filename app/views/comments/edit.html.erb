<h1> Edit a Comment for Post @post.title </h1>


<%= form_for [@post,@comment] do |f| %>
  <p>
    <%= f.label :comment %><br>
    <%= f.text_field :comment %>
  </p>

  <p>
    <%= f.label :user_id %><br>
    <%= f.number_field :user_id %>
  </p>

  <p>
    <%= f.label :enabled %><br>
    <%= f.check_box :enabled%>
  </p>

  <p>
    <%= f.label :date %><br>
    <%= f.datetime_local_field :date%>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
