<h2>Edit Comment</h2>

<%= form_for [@post, @comment] do |f| %>
  <div class="form_meta_field">
    <%= f.label :user %>
    <%= f.text_field :user %>
  </div>

  <div class="form_meta_field">
    <%= f.label :comment %>
    <%= f.text_field :comment %>
  </div>

  <%= f.submit %>
<% end %>

<%= form_for [@post, @comment], method: :delete do |f| %>
  <%= f.submit "Delete!", class: "delete" %>
<% end %>
