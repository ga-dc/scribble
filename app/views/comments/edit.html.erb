<h2>Edit Comment</h2>

<%= form_for [@post, @comment] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
<br>
  <%= f.label :text %>
  <%= f.text_area :text %>
<br>
  <%= f.submit %>
<% end %>

<%= form_for [@post, @comment], method: :delete do |f| %>
  <%= f.submit "Delete!", class: "delete" %>
<% end %>
