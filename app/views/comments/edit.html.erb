<h2>Edit Comment</h2>

<%= form_for [@post, @comment] do |f| %>
	<%= f.label :author_name %>
	<%= f.text_field :author_name %>

	<%= f.label :content %>
	<%= f.text_field :content %>

	<%= f.submit "Edit" %>
<% end %>

<%= form_for [@post, @comment], method: :delete do |f| %>
	<%= f.submit "Delete", class: "delete" %>
<% end %>
