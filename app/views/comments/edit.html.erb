<h2>Edit Comment</h2>

<%= form_for [@post, @comment] do |f| %>
  <%= f.label :comment_content %>
  <%= f.text_field :comment_content%>

  <%= f.label :comment_by %>
  <%= f.text_field :comment_by %>

  <%= f.submit %>
<% end %>

<%= form_for [@post,@comment], method: :delete do |f| %>
  <%= f.submit "Delete!", class: "delete" %>
<% end %>
