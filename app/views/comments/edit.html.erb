<h2>Edit Comment</h2>

<%= form_for [@post, @comment] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :comment_email %>
  <%= f.text_field :comment_email %>

  <%= f.label :comment_content %>
  <%= f.text_field :comment_content %>

  <%= f.submit %>  <%= f.submit %>
<% end %>

<%= form_for [@post, @comment], method: :delete do |f| %>
  <%= f.submit "Delete!", class: "delete" %>
<% end %>

<%= form_for [@post, @comment], method: :save do |f| %>
  <%= f.submit "Save", class: "save" %>
<% end %>
