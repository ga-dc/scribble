<h2>Edit Comment</h2>

<%= form_for [@post, @comment] do |f| %>
  <%= f.label :author %>
  <%= f.text_field :author %>

  <%= f.label :content %>
  <%= f.text_field :content %>

  <%= f.submit %>
<% end %>

<br>

<%= form_for [@post, @comment], method: :delete do |f| %>
  <%= f.submit "Delete Comment", class: "delete" %>
<% end %>
