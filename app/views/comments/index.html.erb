<h2>Comments
<%= link_to "(+)", new_post_comment_path(@post, @comment) %>
</h2>
<ul>
  <% @comments.each do |comment| %>
    <li>
      <%= link_to "#{comment.title} on #{@post.title}", post_comment_path(@post, comment) %>
      <div class="timestamp">Commented on <% comment.timestamp %></div>
    </li>
  <% end %>
</ul>
