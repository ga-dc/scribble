<h2>Comments</h2>
<h3><%= link_to "New Comment", new_comment_path %></h3>

<% @comments.each do |comment| %>
<ul>
  <li>
    <p>
      <%= link_to comment.title, comment %> | <%= link_to   'Delete', comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' } %> | <%= link_to 'Edit', edit_comment_path(comment) %>
    </p>
  </li>
</ul>
<% end %>
