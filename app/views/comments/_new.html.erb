<h3>Add Comment</h3>
<%= form_for([@post, @post.comments.build]) do |f| %>
<p>
    <%= f.label :author %><br>
    <%= f.text_field :author, {:class=> 'form-control'} %>
</p>
<p>
    <%= f.label :content %><br>
    <%= f.text_area :content, {:class=> 'form-control'} %>
</p>
<p>
    <%= f.submit ({:class =>'btn btn-primary'}) %>
</p>
<% end %>
