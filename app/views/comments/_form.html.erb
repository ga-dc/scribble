<h3>Add A Comment</h3>

<div class="comment_form">
  <%= form_for [@post, @comment] do |f| %>
    <p><%= f.label :author %></p>
    <p><%= f.text_field :author %></p>
    <p><%= f.label :body %></p>
    <p><%= f.text_area :body %></p>
    <p><%= f.hidden_field @post.id %></p>
       <%= f.submit %>
  <% end %>
</div>
