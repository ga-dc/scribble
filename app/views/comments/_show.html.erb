<h3>Comments</h3>
<% @post.comments.each do |comment| %>
<div class="well">
    <p>
        <strong><%= comment.author %></strong>:
        <%= comment.content %>
        <%= link_to "edit", edit_post_comment_path(@post, comment) %>
        /
        <%= link_to 'delete', [comment.post, comment], method: :delete, data: {confirm: "Are you sure?"} %></p>
</div>
<% end %>
