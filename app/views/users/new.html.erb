<h2>Sign Up</h2>

<%= form_for @user do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <em>(8 characters minimum)</em><br>
  <%= password_field_tag(:password) %> <br>

  <%= f.label :password_confirmation %>
  <%= password_field_tag(:password_confirmation) %> <br>

  <%= f.submit "Sign Up" %>
<% end %>

<%= link_to "Log In", new_session_path %>
