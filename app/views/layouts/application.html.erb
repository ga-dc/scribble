<!DOCTYPE html>
<html>
<head>
  <title>SUPER ROBOT</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Anton|Open+Sans:400,300,700,300italic,400italic,700italic' rel='stylesheet' type='text/css'>
</head>
<body>
  <%= link_to "SUPER ROBOTS", posts_path, id: "logo" %>
  <div id="rule"></div>
  <nav>
    <%= link_to "New Post", new_post_path, id: "new-post" %>
    <% if current_user %>
      <%= link_to 'Signout', destroy_user_session_path, :method => :delete, id: "signout" %>
    <% else %>
      <%= link_to 'Signup', new_user_registration_path, id: "signup" %>
      <%= link_to 'Login', new_user_session_path, id: "login" %>
    <% end %>

  </nav>

  <%= yield %>
</body>
</html>
