<h2><%= @post.title %></h2>


<p class = "post_text"><%= @post.post %></p>
<p>Date Created: <%= @post.created_at.strftime('%r %a %h %d') %></p>

<%= link_to "(edit)", edit_post_path(@post) %>
<%= link_to "Add Comment", new_post_comment_path(@post) %>

<ul>
  <% @post.comments.each do |comment| %>
  <li class = "comment_text">
    <%= comment.comment %>
  </li>
  <li>
  <%= comment.updated_at.strftime('%r %a %h %d') %>
  <%= link_to "Update Comment", post_comment_path(@post,comment) %>
</li>
<% end %>
</ul>

<%@categories.each do |tag|%>
<%= link_to "#{tag.category},".html_safe, category_path(tag) %>
<% end %>

<%= form_for [@post,@category] do |f| %>

  <%= f.label :category %>
  <%= f.text_field :category %>

  <%= f.submit "Add a New Category"%>
<% end %>
