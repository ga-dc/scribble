<h2><%= @post.title %> <%= link_to "(edit)", edit_post_path(@post) %></h2>
<h4><%= @post.text %></h4>

<h3>Comments <%= link_to "(+)", new_post_comment_path(@post) %></h3>

<ul>
  <% @post.comments.each do |comment| %>
    <li>
      <%= comment.text %>
      <%= link_to "(edit)", edit_post_comment_path(@comment) %>
    </li>
  <% end %>
</ul>
