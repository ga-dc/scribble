<h2><%= link_to "Back to all posts", posts_path %></h2>

<h1><%= @post.title %></h1>

<p><%= @post.body %></p>
<p><%= link_to "Edit Post", edit_post_path(@post) %></p>
<p><%= link_to "Delete Post", post_path(@post), method: :delete %></p>

<p><%= link_to "Add new comment", new_post_comment_path(@post) %></p>


<% @post.comments.each do |comment| %>
<p><%= comment.body %></p>
<p><%= link_to "Edit comment", edit_post_comment_path(@post) %></p>
<p><%= link_to "Delete", post_comment_path(@post, comment), method: :delete %></p>
<% end %>
