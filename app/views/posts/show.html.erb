<h4><a href="/posts">&#8592; back</a><span class="edit"><a href="/posts/<%= @post.id %>/edit">Edit This Post!</a></span></h4>

<h1><%= @post.title %></h1>
<h3>Updated by <%= @post.user %> at <%= @post.created_at %></h3>
<p>
  <%= @post.content %>
</p>

<h3>Comments:</h3>
<% @post.comments.each do |comment| %>
  <div class="comment">
    Added by <%= comment.user %> at <%= comment.created_at %><br />
      <%= comment.content %>
      <p>
        <button><a href="">Edit</a></button>
        <%= form_for comment, url: "/comments/#{comment.id}", method: :delete do |f| %>
        <% f.submit "Delete", class: "btn-delete" %>
        <% end %>
      <p>
  </div>
<% end %>

<div class="newComment">
  <h3>Add New Comment!</h3>
  <%= form_for @post.comments.new do |f| %>

  <p><%= f.label :auther %>
  <%= f.text_field :user %></p>

  <p><%= f.label :content %>
  <%= f.text_field :content %></p>

  <%= f.label :post_id %>
  <%= f.text_field :post_id%>

  <%= f.submit "Add!" %>
  <% end %>
</div>
