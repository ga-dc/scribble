<h1>this is the post show page</h1>


<h2> <%= @post.title %> </h2>
<h4><%= @post.body %></h4>


<h3>Comments</h3>
<ul>
  <% @post.comments.each do |comment| %>
    <li>
        <%= comment.content %>
    </li>

  <% end %>
</ul>



<h2><%= link_to "Add comment for this post", new_comment_path %></h2>
