<h2><%= @post.title %> <%= link_to "(edit)", edit_post_path(@post) %></h2>
<h3>Post: <%= @post.pContent %></h3>

<h3>Comments <%= link_to "(+)", new_post_comment_path(@post) %></h3>

<ul>
  <% @post.comments.each do |comment| %>
    <li>
      <%= link_to "#{comment.cContent}", post_comment_path(@post, comment) %>
    </li>
  <% end %>
</ul>