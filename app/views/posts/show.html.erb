<h2><%= @post.title %> <%= link_to "(edit)", edit_post_path %></h2>

<p><%= @post.text %></h2>

<h3>Comments <%= link_to "(+)", new_post_comment_path(@post) %></h3>

<% @post.comments.each do |comment| %>
  <p><%= comment.text %> <%= link_to "(edit)", edit_post_comment_path(@post, comment) %></p>
<% end %>
