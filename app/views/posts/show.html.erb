<div class="post_content">
<h4> Category: <%= @post.category %></h4>

<h1> <%= @post.title %> <%= link_to "(Edit/Delete)", edit_post_path(@post) %></h1>

<img src="<%= @post.photo_url %>" alt="photo relating to <%= @post.title %>">
<p class = "post_body"> <%= @post.text %></p>

</div>
<h4> Comments: </h4>

	<% @post.comments.each do |comment| %>
		<div>
			<%= link_to "#{comment.text}", post_comment_path(@post, comment) %>
		</div>
	<% end %>


<%= link_to "Add Comment", new_post_comment_path(@post) %>