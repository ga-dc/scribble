<h2><%= @post.title %></h2>
<h4>Author: <%= @post.author %></h4>
<h5>Post Date: <%= @post.updated_at %></h5>
<p><%= @post.content %></p>

<h3>Comments</h3>
<div class="comment-container">
  <% @post.comments.each do |comment| %>
  <div class="comment">
    <h4><%= comment.author %></h4>
    <h5><%= comment.updated_at %></h5>
    <p><%= comment.content %><p>
  </div>
  <% end %>
</div>

<a href="/posts">Back to All Posts</a>
