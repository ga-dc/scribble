<h2> <%= @post.title %> </h2>
<h6 class="update_info"> Updated at <%= @post.created_at %></h6>

<p> <%= @post.content %> </p>

<h3>Comments</h3>

<ul>
  <% @post.comments.each do |comment| %>
  <div class="comment_box">
    <h6> Updated at <%= comment.created_at %></h6>
    <%= comment.content %>
  </div>
  <% end %>
</ul>

<a href="/comments/new">Add Comment</a>
