<h2><%= @post.title %> <%= link_to "(edit)", edit_post_path(@post) %></h2>
<p>Author: <%= @post.author%></p>
<p>Created: <%= @post.created_at%></p>
<p> <%= @post.post_text%></p>


<h3>Comments <%= link_to "(+)", new_post_comment_path(@post)%></h3>


  <% @post.comments.each do |comment| %>
    <div class = comment>
      <p><%= comment.comment_text %></p>
      <p class = "comment_author"> <%= comment.author %> | <%= comment.created_at %></p>
      <%=link_to "(edit)", edit_post_comment_path(@post)%>
      <hr>


    </div>
  <% end %>
