<h2><%= @post.title %></h2>
<time>Created <%= @post.created_at %></time>
  <time>Updated <%= @post.updated_at %></time>
  <p><%= @post.content %></p>
  <p>By <%= @post.author %></p>
  <%= link_to "Edit Post", edit_post_path(@post) %>
  <%= link_to "Delete Post", post_path(@post), method: :delete %>
