<div class = "edit"><%= link_to "(edit)", edit_post_path(@post) %></div>

<h2><%= @post.title%></h2>
<p><%= @post.content %></p>

<h2>Comments <%= link_to "(+)", new_post_comment_path(@post) %></h2>

<ul>
  <% @post.comments.each do |comment| %>
  <li>
    <%= link_to "#{comment.content}", post_comment_path( @post, comment ) %>
  </li>
  <% end %>
</ul>
