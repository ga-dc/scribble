<div class="main_content">
  <h2><%= @post.title %></h2>
  <%= image_tag @post.image_url, alt: "Photo for #{@post.title}" %>
  <h3>Author: <%=@post.author %></h3>
  <p><%= @post.content %></p>
</div>

<%= link_to "Edit Post", edit_post_path(@post) %>
<%= link_to "Delete Post", post_path(@post), method: :delete %>

<div class="comment_section">
  <h3>Comments</h3>
  <%= link_to "Add Comment", new_post_comment_path(@post) %>
    <% @post.comments.each do |comment| %>
      <p><%= comment.username %></p>
      <p><%= comment.content %></p>
      <%= link_to "Edit Comment", edit_post_comment_path(@post, comment) %>
      <%= link_to "Delete Comment", post_comment_path(@post, comment), method: :delete %>
    <% end %>
</div>
