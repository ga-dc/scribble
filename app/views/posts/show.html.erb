<h1>Posts</h1>
<h2><%= @post.title %> <a href="posts_path()<%= @post.id %>/edit">(edit)</a></h2>
<h4><%= @post.body %></h4>

<h3>Comments</h3>
<ul>
  <% @comments.each do |comment| %>
    <li>
      <a href="comments_path()<%= comment.id %>">
        <%= comment.body %>
      </a>
    </li>

  <% end %>
</ul>
