<section class="posts">

  <div class="center">
    <h1><%= @post.title %></h1>
    <p class="subTitle">by <%= @post.user.username %>, updated on <%= @post.updated_at.strftime("%x") %></p>
    <%= link_to 'Edit Post', edit_post_path(@post) %> |
    <%= link_to 'Back', posts_path %>
  </div>

  <p>
    <%= @post.text %>
  </p>

  <div class="comments">
    <h2>Comments</h2>

    <div class="center">
      <%= link_to "Add comment", new_post_comment_path(@post) %>
    </div>

    <% @post.comments.each do |comment| %>
    <div class="comment">
      <img class="ident" src="<%= comment.user.identicon %>" alt="Identicon">
      <p>
        <strong><%= comment.user.username %></strong>: <%= comment.body %>
      </p>

      <%= link_to 'Edit Comment', edit_post_comment_path(@post, comment) %>
    </div>
    <% end  %>

  </div>
</section>
