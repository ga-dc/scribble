<h2><%= @post.title %> <%= link_to "(edit)", edit_post_path(@post) %></h2>
<h4><%= @post.title %></h4>

<img class='post-photo' src="<%= @post.photo_url %>">

<h3>Comments <%= link_to "(+)", new_post_comment_path(@post) %></h3>
<ul>
  <% @post.comments.each do |comment| %>
    <li>

      <%= link_to "(#{comment.body})", comment_path(comment) %>
    </li>

  <% end %>
</ul>
