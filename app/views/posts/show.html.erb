<h1><%= @post.title.upcase %> <%= link_to "[Edit]", edit_post_path(@post) %></h1>
<h3>by: <%= @post.author %></h3>

<%= image_tag @post.post_image %>

<p>
  <%= @post.content %>
</p>

<h2>Comments <%= link_to " (+)", new_post_comment_path(@post.id) %></h2>

<ul>
  <% @post.comments.each do |comment| %>
    <h3><%= comment.author %></h3>
    <p><%= comment.content %></p>
    <p><%= comment.created_at %></p>
    <%= link_to "Edit Comment", edit_post_comment_path(@post, comment) %> <%= link_to "Delete Comment", [@post, comment], method: :delete %>
  <% end %>
</ul>
