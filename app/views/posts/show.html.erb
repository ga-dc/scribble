<h2><%= @post.title %> <a href="/posts/<%= @post.id %>/edit">(edit)</a></h2>
<h4><%= @post.article %></h4>

<h3>Comments</h3>
<ul>
  <% @post.comments.each do |comment| %>
    <li>
      <a href="/comments/<%= comment.id %>">
        <%= comment.comment %> (<%= comment.post %>)
      </a>
    </li>
  <% end %>
</ul>
