<h2><%= @post.title %> <%= link_to "(edit)", edit_post_path(@post) %></h2>
<p>Author: <%= @post.author%></p>
<p>Created: <%= @post.created_at%></p>
<p> <%= @post.post_text%></p>


<h3>Comments <%= link_to "(+)", new_post_comment_path(@post)%></h3>

<ul>
  <% @post.comments.each do |comment| %>
    <li>
      <p><%= link_to comment.comment_text %></p>
      <p class = "comment_author"> <%= comment.author %> </p>
    
    </li>
  <% end %>
</ul>
