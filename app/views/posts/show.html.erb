<h4><%= link_to "Back to All Posts", posts_path %></h4>

<h2><%= @post.title %></h2> <h4><%= link_to "Edit Post", edit_post_path %></h4>
<h6>Updated by <%= @post.author %> at <%= @post.updated_at %></h6>


<p><%= @post.content %></p>


<br>
<br>
<h3>Comments</h3>
<div class="comment section">
<% @post.comments.each do |comment| %>
 <h6>Posted by <%= comment.comment_by %> at <%= comment.created_at %></h6>
 <p><%= comment.content %> <%= link_to "Edit", edit_post_comment_path(@post, comment) %></p>

<% end %>
</div>
<br>
<%= link_to "Add New Comment", new_post_comment_path( @post ) %>
