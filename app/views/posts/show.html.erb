<h2><%= @post.title %></h2>
<p>Posted by <%= @post.author %></p>
<p><%= @post.body %></p>
<p><%= link_to "Edit Post", edit_post_path(@post) %></p>
<h3>Comments <%= link_to "(+)", new_post_comment_path(@post) %></h3>
<ul>
  <% @post.comments.each do |comment| %>
    <li>
      <%= comment.body %>
      <%= comment.author %>
      <%= link_to "Edit", edit_post_comment_path(@post, comment) %>
    </li>
  <% end %>
</ul>
