<div>
    <h1><%= @post.title %></h1>
    <p>Created At: <%= @post.created_at%></p>
    <p><%= @post.content %></p>
    <button><%=link_to "Back", posts_path%></button>
    <button><%=link_to "Edit/Delete", edit_post_path%></button>
</div>
<div>
    <h4>Comments<%= link_to "(new)", new_post_comment_path(@post) %></h4>
    <% @post.comments.each do |comment| %>
        <p><%= comment.response %><%=link_to "Edit/Delete", edit_post_comment_path(@post, comment)%></p>
    <% end %>
</div>
