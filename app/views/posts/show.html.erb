<h2><%= @post.title %></h2>
<p><%= @post.author %></p>
<p><%= @post.body %></p>
<p><%= link_to "Edit Post", edit_post_path(@post) %></p>
<h3>Comments <%= link_to "(+)", new_post_comment_path(@post) %></h3>
<ul>
  <% @post.comments.each do |comment| %>
    <li>
      <%= link_to post_comment_path(@post, comment) %>
    </li>
  <% end %>
</ul>
