<h3><%= @post.title %></h3>
<p><%= @post.content %></p>
<%= link_to 'Make Comment', new_post_comment_path(@post) %>
<% @post.comments.each do |comment| %>
<p><%= comment.body %><%= link_to '(-)', post_comment_path(@post, comment), method: :delete %> <%= link_to 'Edit', edit_post_comment_path(@post, comment) %></p>
<%end %>

<%= link_to 'Edit Post', edit_post_path(@post) %>
<%= link_to 'Delete Post', post_path(@post), method: :delete %>

<%= link_to "Back to Main", posts_path %>
