
<h3>"<%= @post.title.capitalize %>"</h3>

<%= form_for @post do |p| %>
<h3><%= p.text_area :text %></h3>
<%end%>
<div id="bottomrow">
  <%= link_to 'Edit',   edit_post_path %>
  <%= link_to 'Delete', post_path(@post),
        method: :delete,
        data: { confirm: 'Are you sure?' } %></div><br>

<%= form_for @comment do |f| %>
  <!-- hidden field here  -->
  <%= f.label "Leave a comment:" %><br>
  <%= f.text_area :title %><br>
  <%= f.hidden_field :post_id, value: @post.id %>
  <%= f.submit "hit it" %>
<% end %>


<ul>
  <% @post.comments.each do |c| %>
  <li><%= c.title :text %></li>
  <% end %>
</ul>


<h3><%= link_to "Back to Posts", posts_path %></h3>
