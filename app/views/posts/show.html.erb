

<div class="article">
  <h2><%= @post.title %></h2>
  <img src="<%= @post.photo_url %>" alt="<%= @post.title %>" width="400px">
  <p><%= @post.body %></p>
  <%= link_to "Edit this article", edit_post_path(@post) %>
</div>

<div class="comment new-comment">
  <h3>*****Comments*****</h3>
  <p class="comment-link"><%= link_to "New Comment", new_post_comment_path(@post) %></p>

</div>

<% @post.comments.each do |comment| %>
  <div class="comment">
    <h4><%= link_to comment.title, post_comment_path(@post, comment) %></h4>
    <p><p><%= comment.body %></p></p>
    <%= link_to "Edit this Comment", edit_post_comment_path(@post, comment) %>
    <br>
  </div>

<% end %>
