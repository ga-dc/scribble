<h2><%= @post.title %> <a href="/posts/<%= @post.id %>/edit">edit</a></h2>
<h4><%= @post.body %></h4>

<h3>Comments <%= link_to "+", new_post_comment_path(@post) %></h3>
<ul>
  <% @post.comments.each do |comment| %>
    <li>
      <%= "#{comment.body}" %> <%= link_to 'delete', post_comment_path(@post, comment), method: :delete, class: 'delete' %>
    </li>

  <% end %>
</ul>

<h4><%= link_to "back", posts_path %></h4>
