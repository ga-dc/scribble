<h1><%= @post.title %></h1>
  <div>
    <p><%= "Author: #{@post.author}" %></p>
    <p><%= "#{@post.text}" %></p>

    <p><%= link_to 'Edit This Post', edit_post_path(@post) %></p>
    <p><%= link_to 'Delete this post', post_path(@post),
      method: :delete,
    data: { confirm: 'Are you sure?' } %></p>
  </div>

<p><%= link_to "What are your thoughts?", new_post_comment_path(@post) %></p3>

<h3> What Scribblers are Saying: </h3>
<% @post.comments.each do |comment| %>
  <div>
    <p><%= "#{comment.user} says:"%></p>
    <p><%= comment.text %></p>
    <p><%= link_to 'Edit Comment', edit_post_comment_path(@post, comment) %></p>
    <p><%= link_to 'Delete', post_comment_path(@post, comment),
      method: :delete,
    data: { confirm: 'Are you sure?' } %></p>
  </div>

<% end %>
