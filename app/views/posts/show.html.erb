<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @post.content %>
</p>

<h2>Comments</h2>
<% @post.comments.each do |comment| %>
  <p><%= comment.body %> (<%= time_ago_in_words comment.created_at %> ago)</p>
<% end %>

<h2>Add Comment?</h2>
<%= form_for([@post, @post.comments.build]) do |f| %>
  <p>
    <%# f.label :body %><!--br-->
    <%= f.text_area :body %>
  </p>
  <p><%= f.submit %></p>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %>
<%= link_to 'Back', posts_path %>
