<h2>title: <%= @post.title %></h2>
<h4>author: <%= @post.author %></h4>
<h4>post: <%=@post.body %></h4>
<img class='post-photo' src="<%= @post.photo_url %>">
<%= link_to "Edit Post", edit_post_path%>
<%= link_to "Delete Post", post_path(@post), method: :delete%>
<h3>Comments</h3>
<%= link_to "Add Comment", new_post_comment_path(@post)%>
<% @comments.each do |comment|%>
<h4>written by: <%=comment.author%></h4>
<%=comment.comment%>
<%= link_to "Edit", edit_post_comment_path(@post, comment) %>
<%= link_to 'Delete', post_comment_path(@post, comment),method: :delete, data: { confirm: 'Are you sure?' } %>

<%end%>
