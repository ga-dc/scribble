<h2><%= @post.title %></h2>
<h4><%= @post.author%></h4>

<p><%= @post.body %></p>

<div class="tags">
  <% @post.all_tags.each do |tag| %>
  <span><%= tag.name %> <span>
  <% end %>
</div>

<%= form_for @comment do |c| %>
  <%= c.label :title %>
  <%= c.text_field :title %><br>
  <%= c.label :author %>
  <%= c.text_field :author %><br>
  <%= c.label :body %>
  <%= c.text_field :body %><br>
  <%= c.hidden_field :post_id, :value => @post.id %>
  <%= c.submit %>
<% end %>

<h3>Comments</h3>
<% @comments.each do |comment| %>
  <h4><%= comment.title %></h4>
  <p><%= comment.author %> wrote: <%= comment.body %></p>
  <%= link_to "Edit comment", edit_comment_path(comment)%>
  <%= link_to "Delete comment", comment_path(comment), method: 'delete'%>
<% end %>

<br>
<%= link_to "See all posts", posts_path()%>
