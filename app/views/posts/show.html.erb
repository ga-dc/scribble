<h2><%= @post.title %> <%= link_to "(edit)", edit_post_path(@post) %></h2>
<h5><%= @post.author %></h5>
<h4><%= @post.content %></h4>


<h3>Comments <%= link_to "Add Comment", new_post_comment_path(@post) %></h3>

<ul>
  <% @post.comments.each do |comment| %>
    <li>
      <%= link_to "#{comment.title} (#{comment.comment})", post_comment_path(@post, comment) %>
    </li>
  <% end %>
</ul>

