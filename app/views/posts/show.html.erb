<h1><%= @post.title %></h1>
<p><%= @post.body %></p>

<ul>
<% @post.comments.each do |comment| %>
  <li>
    <%= comment.comment_text %>
    <%= button_to "edit", edit_post_comment_path(@post, comment), method: :get %>
    <%= button_to "delete",  { controller: "comments", action: "destroy", id: comment.id, post_id: @post.id}, method: :delete %>
  </li>
<% end %>
</ul>

