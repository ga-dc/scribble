<h2><%=@post.title%> - <%=@post.username%></h2>

<p><%=@post.post_text%></p>

<p>
  <%=@comments.each do |comment|%>
  <p>
    <%=comment.username%> -
    <%=comment.comment_text%>
  <% end %>
  </p>
</p>

<%= link_to "Add Comment", new_post_comment_path(@post) %>
<%= link_to "Edit Post", edit_post_path(@post) %>
