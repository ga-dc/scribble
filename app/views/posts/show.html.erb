<h2>
  <%= @post.title %>
  <% link_to "(Edit)", edit_post_path(@post) %>
</h2>
<h4>
  <%= link_to "Edit Post", edit_post_path(@post)%>
</h4>
<h4>
  <%= link_to "Delete Post", post_path(@post), method: :delete %>
</h4>

<h3>
  <%= @post.post %>
</h3>

<p>
  <%= link_to "Write a comment", new_post_comment_path(@post) %>
</p>


<% @post.comments.each do |comment| %>
<p> <%= comment.comment %> </p>
<% end %>
