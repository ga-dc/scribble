<h2> <%= @post.title %> </h2>
  <p> Published at: <%= @post.created_at %> </p>
  <a href = "/posts/<%= @post.id %>/edit">Edit Post</a>
  <a href = "<%= edit_post_path(@post) %>">Edit Post</a>
  <%= link_to "Edit Post", edit_post_path(@post)   %>
  <p> <%= @post.content %> </p>

<br><br>

<p> Comments: </p>
<% @comments.each do |comment|  %>
  <%= comment.content %>
  <p> Comment published at: <%= comment.created_at %></p>
  <% end %>
