
<h2><%= @post.title %> <%= link_to "(edit)", edit_post_path(@post) %></h2>
<h4><%= @post.nationality %></h4>

<%= image_tag @post.photo_url, class: "post-photo" %>

<h3>Songs <%= link_to "(+)", new_song_path %></h3>

<ul>
  <% @post.songs.each do |song| %>
    <li>
      <%= link_to "#{song.title} (#{song.album})", song %>
    </li>
  <% end %>
</ul>
