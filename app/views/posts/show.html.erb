<h1><%= @post.title %></h1>

<img src="<%= @post.photo_url %>" alt="<%= @post.title %>" width="400px">


<p><%= @post.body %></p>

<h3>*****Comments*****</h3>
<p><%= link_to "New Comment", new_post_comment_path(@post) %></p>

<% @post.comments.each do |comment| %>
  <h4><%= link_to comment.title, post_comment_path(@post, comment) %></h4>
  <p><p><%= comment.body %></p></p>
  <%= link_to "Edit this Comment", edit_post_comment_path(@post, comment) %>
  <br>
<% end %>

