
<h4> Subject: <%= @post.title %></h4>

<h1> <%= @post.title %> <%= link_to "(Edit/Delete)", edit_post_path(@post) %></h1>

<p> <%= @post.description %></p>


<h3>Comments:</h3>

	<% @post.comments.each do |comment| %>
		<div>
			<%= link_to "#{comment.content}", post_comment_path(@post, comment) %>
		</div>
	<% end %>


<%= link_to "Add Comment", new_post_comment_path(@post) %>
