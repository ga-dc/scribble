<h1><%= @post.title %></h1>
  <div>
    <p><%= "Author: #{@post.author}" %></p>
    <p><%= "#{@post.text}" %></p>
  </div>

<p><%= link_to "What are your thoughts?", new_post_comment_path(@post) %></p3>

<h3> Post Comments </h3>
<% @post.comments.each do |comment| %>
  <div>
    <p><%= "#{comment.user} says:"%></p>
    <p><%= comment.text %></p>
    <%= link_to 'Delete', post_comment_path(@post, comment),
      method: :delete,
    data: { confirm: 'Are you sure?' } %>
  </div>

<% end %>
