<h1>Post Title: <%= @post.title %></h1>
<%= @post.body %>
<%= link_to 'edit post', edit_post_path %>
<h2>The Peanut Gallery:</h2>
<p><% @post.comments.each do |comment| %>
  <%= comment.body %>
  <%= link_to '(edit)', edit_post_comment_path(@post, comment) %>
  <%= link_to '(delete)', post_comment_path(@post, comment), method: :delete %>
</p>
<% end %>


<p><%= link_to 'new comment', new_post_comment_path(@post) %> | <%= link_to 'home', :root %> | <%= link_to 'delete post', post_path, method: :delete %></p>
