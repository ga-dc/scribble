<h2><%= @post.title %> <a href="/posts/<%= @post.id %>/edit">(edit)</a></h2>
<h4><%= @post.title %></h4>

<h3>Comments</h3>
<ul>
  <% @post.comments.each do |comment| %>
    <li>
      <a href="/comments/<%= comment.id %>" class="comment">
        <%= comment.content %>
      </a>
    </li>

  <% end %>
</ul>
