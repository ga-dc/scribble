<h2><%= @post.title %></h2> <%= link_to "(edit)", edit_post_path(@post) %>
<h4><%= @post.content %></h4>
<h3>Comments <%= link_to "+", new_post_comment_path(@post) %></h3>
<ul>
  <% @post.comments.each do |comment| %>
    <li>
      <%= link_to "#{comment.title}", post_comment_path(@post, comment) %>
    </li>
  <% end %>
</ul>
