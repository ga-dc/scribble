<%= form_for @post do |f| %>
  <img class="ident" src="<%= current_user.identicon %>" alt="Identicon">
  <p class="subTitle">
    by <%= @user.username %>
  </p>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
