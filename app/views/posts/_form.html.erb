<div class="post_form">
  <%= form_for @post do |f| %>
    <p><%= f.label :title %></p>
    <p><%= f.text_field :title %></p>
    <p><%= f.label :author %></p>
    <p><%= f.text_field :author %></p>
    <p><%= f.label :body %></p>
    <p><%= f.text_area :body %></p>
       <%= f.submit %>
  <% end %>
</div>
