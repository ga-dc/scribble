<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <ul>
        <h2>errors:</h2>
        <% @post.errors.full_messages.each do |message| %>
          <p><%= message %></p>
        <% end %>
      </ul>
    </div>
  <% end  %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.submit %>
  </p>
 <% end %>
