<br><h2>New Post</h2>

<div class="form">	
	<%= form_for @post do |f|%>

		<%= f.label :username  %><br>
		<%= f.text_field :username %><br>

		<%= f.label :subject  %><br>
		<%= f.text_field :subject %><br>

		<%= f.label :content  %><br>
		<%= f.text_area :content %><br>

		<%=f.submit%>
	<%end%>
</div>