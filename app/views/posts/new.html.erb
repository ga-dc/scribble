<%= form_for @post, html: {class:"new_post_form"} do |f| %>
<div>
  <%= f.label :title,:class => "label" %>
  <%= f.text_field :title, :class => "title_box input" %>
</div>

<div>
  <%= f.label :author, :class => "label"%>
  <%= f.text_field :author,:class => "author_box input" %>
</div>

<div>
  <%= f.label :post_content,:class => "label"%>
  <%= f.text_area :post_content, :class => "post_box"%>
</div>

  <%= f.submit "Create Post", :class => "submit_button"%>
<%end%>

