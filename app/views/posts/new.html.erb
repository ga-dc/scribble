<h2>New Post</h2>

<%= form_for @post do |f| %>
  <p>
    <%= f.label "#{:author}:" %>
    <%= f.text_field :author %>
  </p>
  <p>
    <%= f.label "#{:title}:" %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label "#{:photo_url}:" %>
    <%= f.text_field :photo_url %>
  </p>
  <p>
    <%= f.label "#{:text}:" %>
    <%= f.text_field :text %>
  </p>
  <%= f.submit %>
<% end %>
