<h1>New Post</h1>

<% if @post.errors.any? %>
<div id='error_explanation'>
  <h2>
    <%= pluralize(@post.errors.count, 'error') %> prohibited this post from being saved:
  </h2>
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
  </ul>
</div>
<% end %>

<%= form_for :post, url: posts_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'All Posts', posts_path %>
