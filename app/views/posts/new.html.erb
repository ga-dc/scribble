<h1><%= link_to "All Posts", posts_path %></h1>

<h3>Add New Post</h3>

<%= form_for @post do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>
<%= f.label :author %>
<%= f.text_field :author %>
<%= f.label :body %>
<%= f.text_field :body %>
<%= f.submit %>
<% end %>


<h3>Add A Comment</h3>
<%= form_for @comment do |f| %>
<%= f.label :body %>
<%= f.text_field :body %>
<%= f.label :author %>
<%= f.text_field :author %>
<%= f.submit %>
<% end %>
