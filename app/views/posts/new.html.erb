<h2>New Post</h2>

<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :date %>
  <%= f.text_field :date %>

  <%= f.label :content %>
  <%= f.text_field :content %>

  <%= f.submit "POST" %>
<% end %>

