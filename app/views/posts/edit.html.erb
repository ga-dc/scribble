<%= link_to "< Back", @post %>
<p>
    <div class="well">
        <h2>Edit Post</h2>

        <%= form_for :post, url: post_path(@post), method: :patch do |f| %>
        <p>
            <%= f.label :title %><br>
            <%= f.text_field :title, {:class=> 'form-control'} %>
        </p>
        <%= f.label :author %><br>
        <%= f.text_field :author, {:class=> 'form-control'} %>
        <p>
            <%= f.label :content %><br>
            <%= f.text_area :content, {:class=> 'form-control'} %>
        </p>
        <p>
            <%= f.submit ({:class =>'btn btn-primary'}) %>
        </p>
    </div>
    <% end %>
