<h1>Edit your Article!</h1>

<% @post.errors.full_messages.each do |key, value| %>
<h3 class="flash"> <%= key %></h3>
<% end %>


<%= form_for @post do |f| %>
<input type="hidden" name="_method" value="patch">
  <%= f.label :title %>
  <%= f.text_field :title %>
  <hr class="form-space">

  <%= f.label :body %>
  <%= f.text_area :body %>
  <hr class="form-space">

  <%= f.label :photo_url %>
  <%= f.text_field :photo_url %>
  <hr class="form-space">

  <%= f.submit "Update"%>
<% end %>

<%= form_for @post, method: :delete do |f| %>
  <%= f.submit "Delete!", class: "delete" %>
<% end %>
