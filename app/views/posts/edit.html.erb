<h2>Edit Post</h2>

<%= form_for @post, url: "/posts/#{@post.id}", method: :put do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :pContent %>
  <%= f.text_field :pContent %>

  <%= f.submit %>
<% end %>

<%= form_for @post, method: :delete do |f| %>
  <%= f.submit "Delete!", class: "delete" %>
<% end %>