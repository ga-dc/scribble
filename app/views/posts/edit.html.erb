<%= link_to "Back", post_path(@post), method: :get %>
<h1>Edit Post</h1>

<%= form_for @post do |f| %>
  <%= f.label :title, :"Post Title" %>
  <%= f.text_field :title %>

  <%= f.label :body, :"Post Content" %>
  <%= f.text_area :body %>

  <%= f.submit :"Edit Post" %>
<% end %>

<%= form_for @post, method: :delete do |f| %>
  <%= f.submit :"Delete Post" %>
<% end %>
