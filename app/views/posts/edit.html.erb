<h2>Edit Post</h2>

<%= form_for @post do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %>

  <%= f.label :image_url %><br>
  <%= f.text_field :image_url %>

  <%= f.label :text %><br>
  <%= f.text_area :text %>

  <%= f.submit %>
<% end %>

<%= form_for @post, method: :delete do |f| %>
  <%= f.submit "Delete!", class: "delete" %>
<% end %>
