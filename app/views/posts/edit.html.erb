<h2>Edit article</h2>
<div class="form">
<%= form_for @post do |f|  %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :content %>
  <%= f.text_area :content, size: "60x12" %>
<%= f.submit "submit"%>
<% end %>
</div>

<h2>Delete article</h2>
<%= form_for @post, method: :delete do |f| %>
  <%= f.submit "Delete!", class: "delete" %>
<% end %>

