<h1>Edit Post</h1>

<%= form_for @post do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title %>

	<%= f.label :category %>
	<%= f.text_field :category %>

	<%= f.label :photo_url %>
	<%= f.text_field :photo_url %>

	<%= f.label :text %>
	<%= f.text_field :text %>

	<%= f.submit "Edit" %>
<% end %>

<%= form_for @post, method: :delete do |f| %>
	<%= f.submit "Delete", class: "delete" %>
<% end %>