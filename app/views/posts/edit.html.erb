<h2>Edit Post</h2>

<%= form_for @post do |f| %>
  <div class="">
    <%= f.label :author, "Author:" %>
    <%= f.text_field :author %>
  </div>

  <div class="">
    <%= f.label :title, "Title:" %>
    <%= f.text_field :title %>
  </div>

  <div class="">
    <%= f.label :content, "Content:" %>
    <%= f.text_field :content %>
  </div>

  <%= f.submit %>
<% end %>

<%= form_for @post, method: :delete do |f| %>
  <%= f.submit "Delete Post", class: "delete" %>
<% end %>
