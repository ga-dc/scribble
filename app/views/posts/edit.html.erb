<h2>Edit <%= @post.title %></h2>

<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :body %>
  <%= f.text_field :body %>

  <%= f.submit "Edit" %>
<% end %>

<%= form_for @post, method: :delete do |f| %>
  <% f.submit "Delete", class: "delete" %>
<% end %>
