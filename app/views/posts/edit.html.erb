<h2>Edit Post</h2>

<%= form_for @post do |f| %>
  <p>
    <%= f.label :author %>
    <%= f.text_field :author %>
  </p>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :photo_url %>
    <%= f.text_field :photo_url %>
  </p>
  <p>
    <%= f.label :text %>
    <%= f.text_field :text %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
<hr>

<%= form_for @post, method: :delete do |f| %>
  <%= f.submit "Delete Post", class: "delete" %>
<% end %>
