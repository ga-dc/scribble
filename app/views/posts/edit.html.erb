<h2>Edit Your Post</h2>

<%= form_for @post do |f|%>
    <%=  f.label :title%>
    <%=  f.text_field :title%>
</br>
    <%=  f.label :content%>
    <%=  f.text_area :content, :cols => "150", :rows => "10 "%>
</br>
    <%= f.submit "Submit"%>
<% end %>

<%= form_for @post, method: :delete do |f| %>
    <%= f.submit "Delete Post"%>
<% end %>
