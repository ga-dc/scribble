<h2>Posts</h2>
  <h3><%= link_to "Post new Blog", new_post_path %></h3>

  <% @posts.each do |post| %>
  <div class="post">
    <p>
      <%= link_to post.title, post %> | <%= link_to 'Edit', edit_post_path(post) %> | <%= link_to 'Delete', post_path(post), method: :delete %>
    </p>
  </div>
  <% end %>
