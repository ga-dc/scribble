<h2>Posts</h2>

<% @posts.each do |post| %>

  <div class="post-preview">

    <h3><%= link_to post.title, post %></h3>
    <h6>This post was created on <%= post.created_at %> by <%= post.author %>.</h6>

    <p><%= truncate(post.message, length: 500) %></p>
    <a href="/posts/<%= post.id%>">
      <h4>Comments (<%= post.comments.length %>)</h4>
    </a>
  </div>

<% end %>
