<h1>Latest Post <%= link_to " (+)", new_post_path %></h1>

<% @posts.each do |post| %>
  <div class="card">
    <%= image_tag post.post_image %>
    <h2><%= link_to post.title, post %></h2>
    <p><%= post.content %></p>
  </div>
<% end %>



