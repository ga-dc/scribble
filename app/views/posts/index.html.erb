<h1>All Posts</h1>

<%= link_to 'New Post?', new_post_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Age</th>
    <th colspan="3"></th>
  </tr>

<% if @posts.length > 0 %>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.content %></td>
      <td><%= time_ago_in_words post.created_at %></td>
      <td><%= link_to 'Show', post_path(post) %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Destroy', post_path(post), method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
<% end %>
</table>
