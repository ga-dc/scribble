<h1>Look at this index!</h1>
<% @posts.each do |post| %>
<br>
<hr>
<br>
<h3><%= post.title %></h3>
<h4><%= post.author %> at <%= post.created_at %></h4>
<p><%= post.content %></p>
<p>Last Updated: <%= post.updated_at %></p>
<p>Likes: <%= post.likes %></p>
<h4><a href="#">Comments</a></h4>
<% end %>
