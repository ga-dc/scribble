<!-- hyperlinks to diff parts of app -->

<br>

<%= link_to 'Add New Post', new_post_path %>

<br>

<!-- lists all posts created -->
<div id="posts-list">
  <% @posts.each do |post| %>

  <h3><%= post.title %></h3>
  created on --> <%= post.created_at %>
  <br>
  <!-- creates links to view/edit rest of post-->
  <%= link_to 'view full post', post_path(post) %>
  <br>
  <%= link_to 'edit', edit_post_path(post) %>
  <%= link_to 'Delete', post_path(post), method: :delete, data: {confirm: 'Are you sure you want to delete this?'} %>

  <% end %>
</div>
