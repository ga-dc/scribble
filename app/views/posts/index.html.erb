<h1>Posts</h1>




<h2><%= link_to "Create New Post", new_post_path %></h2>

<ul>
  <% @post.each do |post| %>
    <li>
      <a href="/posts/<%= post.id %>">
        <%= post.title %>
        <br>
        <%= post.body %>
      </a>
      <%= button_to "delete", post, method: :delete %>
      <%= link_to "edit", edit_post_path(post) %>

    </li>
  <% end %>
</ul>
