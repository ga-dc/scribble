<div class="container">
<% @posts.each do |post| %>
<div class="post">
<h2><%= post.title.capitalize %></h2>
<section><%= post.text[0..500] %>
  <% if post.text.length > 500 %>
  <span class="readmore"><%= link_to "...read more", post_path(post) %></span></section>
  <% else %>
  </section><p><%= link_to "Full post", post_path(post) %></p>
  <% end %>
</div>
<% end %>
</div>
