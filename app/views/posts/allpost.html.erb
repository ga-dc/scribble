<h1>Posts
  <%= link_to "My Posts", posts_path %>
  <%= link_to "(+)", new_post_path %>
</h1>
<ul>
  <% @posts.each do |post| %>
  <li class = "post_title">
    <%= link_to post.title, post_path(post) %>
  </li>
  <li class = "post_text">
    <%= post.post %>
  </li>

  <%post.categories.each do |tag|%>
  <%= link_to "#{tag.category}".html_safe, category_path(tag) %>
  <% end %>

  <% end %>
</ul>
