<h1>Edit Post</h1>

<h2><%= @post.title %></h2>

<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, :value => @post.title %>

  <%= f.label :content %>
  <%= f.text_area :content, :value => @post.content %>

  <%= f.submit %>
<% end %>

<%= button_to "Delete Post", @post, :method => :delete %>
