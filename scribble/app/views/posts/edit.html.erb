<h2>Edit Post</h2>

<%= form_for @post do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :author_id %>
    <%= f.text_area :author_id %>

    <%= f.label :message %>
    <%= f.text_area :message %>

    <%= f.label :image_url %>
    <%= f.text_area :image_url %>

    <%= f.submit %>
<% end %>

<%= form_for @post, method: :delete do |f| %>
  <%= f.submit "Delete!", class: "delete" %>
<% end %>
