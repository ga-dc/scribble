<h2><%= @post.title %></h2> <button><%= link_to "(edit)", edit_post_path(@post) %></button>
<h4><%= @post.content %></h4>
<h4>Posted By: <%= current_user.email %></h4>
<h3>Comments<button><%= link_to "+", new_post_comment_path(@post) %></button></h3>
<ul>
  <% @post.comments.each do |comment| %>
    <li>
      <%= link_to "#{comment.title}", post_comment_path(@post, comment) %>
    </li>
  <% end %>
</ul>
