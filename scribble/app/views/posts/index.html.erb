<h1>Scribble</h1>

<%= link_to "Create User", new_user_path(@user) %> <br />

<a href="/posts/new">Create Post</a>

<% @posts.reverse_each do |post| %>
  <h2><%= post[:title] %></h2>
  <p><%= post[:content] %></p>

  <%= link_to "Comments: " + post.comments.length.to_s, post_path(post) %>
<% end %>
