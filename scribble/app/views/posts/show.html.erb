<h2><%= @post.headline %></h2>

<%= link_to 'Back', posts_path %> |
<%= link_to 'Edit', edit_post_path(@post) %>

<%= image_tag @post.image %>

<p><%= @post.body %></p>

<h3>Comments</h3>
<!-- Create Post -->
<div class="comments">
  <div id="show_add_comment">
    <%= link_to "Add new comment", new_post_comment_path(@post)%>
  </div>
  <!-- Show Post -->
  <% @post.comments.each do |comment| %>
  <div id="comment_date">
    <%= comment.created_at%>
  </div>
  <div id="comment_text">
    <%= comment.com_text %>
  </div>
  <div id="delete_comment">
    <p>DELETE GOES HERE</p>
  </div>
  <% end %>
</div>
