<h2><%= @post.title %></h2>
<p><%= @post.text %></p>

 <p><%= link_to "Edit", edit_post_path(@post)%></p>
 <p><%= link_to "Delete Post", post_path(@post), method: :delete %></p>


 <p><%= link_to "Create a Comment", new_post_comment_path(@post) %></p>

 <% @post.comments.each do |comment| %>
 <p>Comment: <%= "#{comment.text}" %></p>
 <%end %>
