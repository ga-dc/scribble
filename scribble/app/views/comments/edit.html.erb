<h2>Edit Comment</h2>

<%= form_for [@post, @comment] do |f| %>

  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :comment %>
  <%= f.text_field :comment %>

  <%= f.submit %>
<% end %>

<%= form_for [@post, @comment], method: :delete do |f| %>
  <%= f.submit "Delete!", class: "delete" %>
<% end %>
